<?php

// Validation function to filter user inputs
function validate($data) {
    $data = trim($data);
    $data = stripslashes($data);
    $data = htmlspecialchars($data);
    return $data;
}

// Gets which employee is logged in
function get_employee_data($db_conn) {
    $sql_getData = $db_conn->prepare("SELECT * FROM employee");
    $sql_getData->execute();
    $result = $sql_getData->fetchAll(PDO::FETCH_ASSOC);
    return $result;
}

